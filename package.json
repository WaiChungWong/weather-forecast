{
  "name": "weather-forecast",
  "version": "0.1.0",
  "description": "A simple web app for weather forecast, using source from Open Weather Map",
  "author": "John Wong <johnwongwwc@gmail.com>",
  "license": "ISC",
  "private": true,
  "homepage": "https://waichungwong.github.io/weather-forecast",
  "dependencies": {
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-scripts": "3.1.1",
    "redux": "^4.0.4"
  },
  "scripts": {
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "test": "exit 0",
    "build": "npm run build-css && react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
